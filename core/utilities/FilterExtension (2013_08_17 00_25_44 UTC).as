import flash.filters.*;class com.abazaba.core.view.utilities.FilterExtension{		public var color:Number;		public var  alpha:Number;		public var  blurX:Number;		public var  blurY:Number;		public var  strength :Number;		public var  quality:Number;		public var  inner:Boolean;		public var  knockout:Boolean;		public function FilterExtension(){}			// ###################################################	//Glow	public function glow(target:MovieClip,params:Object){		color = 0xffffff;		alpha = .8;		blurX = 35;		blurY = 35;		strength = 2;		quality = 3;		inner = false;		knockout = false;				if(params!=null){			for(var i in params){				this[i]=params[i];				if(params[i]=="true" || params[i]=="false"){this[i]=new Boolean(params[i])}			}		}				var filter:GlowFilter = new GlowFilter(color, 							alpha, 							blurX, 							blurY, 							strength, 							quality, 							inner, 							knockout);		var filterArray:Array = new Array();		filterArray.push(filter);		target.filters = filterArray;	}			public function blur(target:MovieClip,params:Object){		quality =1; // Quality :: 1 || 2|| 3		blurX = 10;		blurY = 10;										if(params!=null){			for(var i in params){				this[i]=params[i];			}		}				var filter:GlowFilter = new GlowFilter(color, 							alpha, 							blurX, 							blurY);		var filterArray:Array = new Array();		filterArray.push(filter);		target.filters = filterArray;	}					// ###################################################	// Drop	//public function dropShadow(target,params){		//if(params==null){			//var filter:DropShadowFilter = new DropShadowFilter(alpha, angle, color, .8, 16, 16, 1, 3, false, false, false);			//var distance:Number = 20;			//var angleInDegrees:Number = 45;			//var color:Number = 0x000000;			//var alpha:Number = .8;			//var blurX:Number = 16;			//var blurY:Number = 16;			//var strength:Number = 1;			//var quality:Number = 3;			//var inner:Boolean = false;			//var knockou